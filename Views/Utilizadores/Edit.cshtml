@model PWEB.Models.Utilizador

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Utilizador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="NormalizedUserName" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="NormalizedEmail" />
            <input type="hidden" asp-for="EmailConfirmed" />
            <input type="hidden" asp-for="PasswordHash" />
            <input type="hidden" asp-for="SecurityStamp" />
            <input type="hidden" asp-for="ConcurrencyStamp" />
            <input type="hidden" asp-for="PhoneNumber" />
            <input type="hidden" asp-for="PhoneNumberConfirmed" />
            <input type="hidden" asp-for="TwoFactorEnabled" />
            <input type="hidden" asp-for="LockoutEnd" />
            <input type="hidden" asp-for="LockoutEnabled" />
            <input type="hidden" asp-for="AccessFailedCount" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apelido" class="control-label"></label>
                <input asp-for="Apelido" class="form-control" />
                <span asp-validation-for="Apelido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NIF" class="control-label"></label>
                <input asp-for="NIF" class="form-control" />
                <span asp-validation-for="NIF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Morada" class="control-label"></label>
                <input asp-for="Morada" class="form-control" />
                <span asp-validation-for="Morada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroCartaoMultibanco" class="control-label"></label>
                <input asp-for="NumeroCartaoMultibanco" class="form-control" />
                <span asp-validation-for="NumeroCartaoMultibanco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidadeCartaoMultibanco" class="control-label"></label>
                <input asp-for="ValidadeCartaoMultibanco" class="form-control" />
                <span asp-validation-for="ValidadeCartaoMultibanco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CvdCartaoMultibanco" class="control-label"></label>
                <input asp-for="CvdCartaoMultibanco" class="form-control" />
                <span asp-validation-for="CvdCartaoMultibanco" class="text-danger"></span>
            </div>
            @if (ViewBag.Desativar)
            {
                <div class="form-group form-check visually-hidden">
                    <label class="form-check-label">
                        <input type="hidden" class="form-check-input" asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
                    </label>
                </div>
            }
            else
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
                    </label>
                </div> 
            }
            <div class="form-group">
                <label asp-for="Eliminar" class="control-label"></label>
                <input asp-for="Eliminar" class="form-control" />
                <span asp-validation-for="Eliminar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpresaId" class="control-label"></label>
                <select asp-for="EmpresaId" class ="form-control" asp-items="ViewBag.EmpresaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
