@model PWEB.Models.Utilizador

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Utilizador</h1>

<h4>Utilizador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
