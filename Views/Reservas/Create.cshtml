@model PWEB.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reserva</h4>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EntregaId"/>
            <input type="hidden" asp-for="RecolhaId"/>
            <input type="hidden" asp-for="AvaliacaoId"/>
            <input type="hidden" asp-for="VeiculoId"/>

            <div class="form-group">
                <label asp-for="DataDeLevantaneto" class="control-label"></label>
                <input asp-for="DataDeLevantaneto" class="form-control" />
                <span asp-validation-for="DataDeLevantaneto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeEntrega" class="control-label"></label>
                <input asp-for="DataDeEntrega" class="form-control" />
                <span asp-validation-for="DataDeEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Eliminar" class="control-label"></label>
                <input asp-for="Eliminar" class="form-control" />
                <span asp-validation-for="Eliminar" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <div class="col-md-4 col-md-offset-2">
        <legend>Detalhes do veiculo selecionado</legend>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayName("ViewBag.Veiculo.Marca")
            </dt>
            <dd class="col-sm-10">
                @Html.Encode(ViewBag.Veiculo.Marca)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("ViewBag.Veiculo.Modelo")
            </dt>
            <dd class="col-sm-10">
                @Html.Encode(ViewBag.Veiculo.Modelo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("ViewBag.Veiculo.Lugares")
            </dt>
            <dd class="col-sm-10">
                @Html.Encode(ViewBag.Veiculo.Lugares)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayName("ViewBag.Veiculo.MudançasManuais")
            </dt>
            <dd class="col-sm-10">
                @Html.Encode(ViewBag.Veiculo.MudançasManuais)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayName("ViewBag.Veiculo.PreçoPorHora")
            </dt>
            <dd class="col-sm-20">
                @Html.Encode(ViewBag.Veiculo.PreçoPorHora)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayName("ViewBag.Veiculo.Localização")
            </dt>
            <dd class="col-sm-20">
                @Html.Encode(ViewBag.Veiculo.Localização)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("ViewBag.Veiculo.Tipo")
            </dt>
            <dd class="col-sm-10">
                @Html.Encode(ViewBag.Veiculo.Tipo.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayName("ViewBag.Veiculo.empresa")
            </dt>
            <dd class="col-sm-10">
                @Html.Encode(ViewBag.Veiculo.empresa.Nome)
            </dd>
        </dl>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
